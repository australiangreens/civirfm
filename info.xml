<?xml version="1.0"?>
<extension key="civirfm" type="module">
  <file>civirfm</file>
  <name>CiviRFM</name>
  <description>Fundraising RFM model implementation for CiviCRM contributers</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>John Twyman</author>
    <email>john.twyman@greens.org.au</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">http://FIXME</url>
    <url desc="Documentation">http://FIXME</url>
    <url desc="Support">http://FIXME</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2023-06-13</releaseDate>
  <version>0.1</version>
  <develStage>alpha</develStage>
  <compatibility>
    <ver>5.57</ver>
  </compatibility>
  <comments>This extension adds a simple RFM model to CiviCRM for fundraising purposes</comments>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Civirfm</namespace>
    <format>23.02.1</format>
    <angularModule>crmCivirfm</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
    <mixin>entity-types-php@1.0.0</mixin>
    <mixin>menu-xml@1.0.0</mixin>
  </mixins>
  <upgrader>CRM_Civirfm_Upgrader</upgrader>
</extension>
